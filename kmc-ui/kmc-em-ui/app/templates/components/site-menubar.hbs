<ul class="site-menu">
    {{#each menus as |menu|}}
      {{#unless menu.parent}}
      <li class="site-menu-item active {{if menu.hasChildren ' has-sub'}}">
          <a class="animsition-link">
              <i class="site-menu-icon md-view-dashboard" aria-hidden="true"></i>
              <span class="site-menu-title">{{menu.label}}</span>
              {{#if menu.hasChildren}}
                  <span class="site-menu-arrow"></span>
              {{/if}}
          </a>
          {{#if menu.hasChildren}}
              <ul class="site-menu-sub">
              {{#each menu.children as |item|}}
                  <li class="site-menu-item">
                      <a class="animsition-link" href="#">
                          <span class="site-menu-title">{{item.label}}</span>
                      </a>
                  </li>
              {{/each}}
              </ul>
          {{/if}}
      </li>
      {{/unless}}
    {{/each}}
</ul>
